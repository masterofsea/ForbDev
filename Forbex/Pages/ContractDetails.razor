            </div>
            <div class="col-md-2">
                <RadzenCheckBox Name="DocumentsStorage" TriState="false" TValue="bool" @bind-Value="@Contract.DocumentsStorage"/>
            </div>
            <div class="col-md-2">
                <RadzenCheckBox Name="Receipt" TriState="false" TValue="bool" @bind-value="@Contract.Receipt"/>
                </div>
        </div>
